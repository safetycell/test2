                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/Q2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/rightshoulder" />

                <RadioButton
                    android:id="@+id/Q2_2"
